{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ]
}
